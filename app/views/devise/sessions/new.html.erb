<h2 style="text-align:center;">Ingresar</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<%= devise_error_messages! %>
<div class="row" style="margin-top: 20px;">
    <div class="col-md-12">
        <%= f.email_field :email, autofocus: true, class: "form-control input-lg", placeholder: "Email" %>
    </div>
</div>

<div class="row" style="margin-top: 20px;">
    <div class="col-md-12">
        <%= f.password_field :password, autocomplete: "off", class: "form-control input-lg", placeholder: "Clave" %>
    </div>
</div>

<% if devise_mapping.rememberable? -%>
<div class="row" style="margin-top: 20px;">
    <div class="col-md-12">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
    </div>
</div>
<% end -%>

<div class="row" style="margin-top: 20px;">
    <div class="col-md-12 btn-group-vertical">
        <%= f.submit "Ingresar", class: "btn btn-danger btn-lg btn-block" %>
        <%= render "devise/shared/links" %>

<% end %>

