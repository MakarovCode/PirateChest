/* Font Icons */
.icon {
    display: inline-block;
    font-family: 'ios7-icon';
    -webkit-text-rendering: geometricPrecision;
    -moz-text-rendering: geometricPrecision;
    -ms-text-rendering: geometricPrecision;
    -o-text-rendering: geometricPrecision;
    text-rendering: geometricPrecision;
    -webkit-font-smoothing: antialiased;
    -moz-font-smoothing: antialiased;
    -ms-font-smoothing: antialiased;
    -o-font-smoothing: antialiased;
    font-smoothing: antialiased;
    font-style: normal;
    text-shadow: none;
}

[class*="sa-"] {
    background-position: center;
    background-repeat: no-repeat;
}

/* Left Menu */
[class*="sa-side-"] {
    width: 44px;
    height: 44px;
}

.sa-side-home { background-image: url('<%= asset_path("treasure/icon/home.png") %>'); }
.sa-side-typography { background-image: url('<%= asset_path("treasure/icon/typography.png") %>'); }
.sa-side-widget { background-image: url('<%= asset_path("treasure/icon/widgets.png") %>'); }
.sa-side-table { background-image: url('<%= asset_path("treasure/icon/table.png") %>'); }
.sa-side-form { background-image: url('<%= asset_path("treasure/icon/form.png") %>'); }
.sa-side-ui { background-image: url('<%= asset_path("treasure/icon/ui.png") %>'); }
.sa-side-folder { background-image: url('<%= asset_path("treasure/icon/folder.png") %>'); }
.sa-side-calendar { background-image: url('<%= asset_path("treasure/icon/calendar.png") %>'); }
.sa-side-page { background-image: url('<%= asset_path("treasure/icon/pages.png") %>'); }
.sa-side-chart { background-image: url('<%= asset_path("treasure/icon/chart.png") %>'); }
.sa-side-photos { background-image: url('<%= asset_path("treasure/icon/photos.png") %>'); }
.sa-side-back { background-image: url('<%= asset_path("treasure/icon/back.png") %>'); }

/* Top Menu */
[class*="sa-top-"] {
